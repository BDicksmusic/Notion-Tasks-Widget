{
  "name": "notion-tasks-widget",
  "private": true,
  "version": "1.0.0",
  "description": "Electron-based floating widget for viewing and adding Notion tasks",
  "main": "dist/main/main/main.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently -k \"npm:dev:main\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:main": "concurrently \"tsc --project tsconfig.main.json --watch\" \"tsc-alias -p tsconfig.main.json -w\"",
    "dev:renderer": "vite dev --config vite.config.ts --port 5174",
    "dev:electron": "wait-on dist/main/main/main.js dist/main/main/preload.js tcp:5174 && cross-env VITE_DEV_SERVER_URL=http://localhost:5174 electron .",
    "build": "rimraf dist/main dist/renderer && npm run build:main && npm run build:renderer",
    "build:main": "tsc --project tsconfig.main.json && tsc-alias -p tsconfig.main.json",
    "build:renderer": "vite build --config vite.config.ts",
    "build:mobile": "vite build --config vite.mobile.config.ts",
    "mobile:sync": "npm run build:mobile && npx cap sync android",
    "mobile:run": "npm run build:mobile && npx cap run android",
    "mobile:open": "npx cap open android",
    "build:app": "npm run build && electron-builder --win portable",
    "start": "cross-env NODE_ENV=production electron .",
    "typecheck": "tsc --noEmit --project tsconfig.json",
    "generate-icons": "node scripts/generate-icons.js"
  },
  "build": {
    "appId": "com.notiontasks.widget",
    "productName": "Notion Tasks Widget",
    "files": [
      "dist/main/**/*",
      "dist/renderer/**/*",
      "package.json",
      "!dist/win-unpacked/**/*",
      "!dist/*.exe",
      "!dist/*.7z"
    ],
    "asarUnpack": [
      "**/node_modules/micromark-util-encode/**/*",
      "**/node_modules/**/micromark-util-encode/**/*",
      "**/node_modules/micromark-util-decode-string/**/*",
      "**/node_modules/**/micromark-util-decode-string/**/*",
      "**/node_modules/micromark-util-sanitize-uri/**/*",
      "**/node_modules/**/micromark-util-sanitize-uri/**/*",
      "**/node_modules/micromark-util-symbol/**/*",
      "**/node_modules/**/micromark-util-symbol/**/*",
      "**/node_modules/decode-named-character-reference/**/*",
      "**/node_modules/**/decode-named-character-reference/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "portable"
      ],
      "icon": "icon.ico"
    },
    "publish": {
      "provider": "github",
      "owner": "",
      "repo": ""
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@capacitor/android": "^7.4.4",
    "@capacitor/core": "^7.4.4",
    "@capacitor/preferences": "^7.0.2",
    "@notionhq/client": "^5.4.0",
    "decode-named-character-reference": "^1.2.0",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.6.2",
    "is-hotkey": "^0.2.0",
    "lodash-es": "^4.17.21",
    "micromark-util-decode-string": "^2.0.1",
    "micromark-util-encode": "^2.0.1",
    "micromark-util-sanitize-uri": "^2.0.1",
    "micromark-util-symbol": "^2.0.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.0",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.0",
    "slate": "^0.100.0",
    "slate-history": "^0.100.0",
    "slate-react": "^0.100.0",
    "unified": "^11.0.5",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@capacitor/cli": "^7.4.4",
    "@types/mdast": "^4.0.3",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/unist": "^3.0.2",
    "@vitejs/plugin-react": "^4.7.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.2",
    "electron-builder": "^25.1.8",
    "rimraf": "^6.1.2",
    "sharp": "^0.33.0",
    "to-ico": "^1.1.5",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.9.3",
    "vite": "^6.4.1",
    "wait-on": "^9.0.3"
  }
}
