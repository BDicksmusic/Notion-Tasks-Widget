{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "types": ["vite/client", "node"],
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@common/*": ["src/common/*"]
    },
    "noEmit": true
  },
  "include": ["src/renderer", "src/shared", "src/common", "src/types", "src/mcp"],
  "exclude": ["dist", "node_modules"]
}






